lfspanel &
while read
	do
		rcfile=$(basename $REPLY .rc)
		rcfile=${rcfile##?*-}
		if [ "X$rcfile" != "Xlfspanel" ];then
			lfspanel $rcfile &
		fi
	done < <(ls -1 ~/.config/LFS/lfspanel*)